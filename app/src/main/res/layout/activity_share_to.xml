<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_share_to"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.idea.clipboard.Activities.ShareTo">

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rvAppList"
            android:layout_alignParentTop="true">

        </android.support.v7.widget.RecyclerView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lbl_noApp"
            android:text="No Selected App"
            android:textSize="20dp"
            android:visibility="gone"
            android:layout_centerInParent="true"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_editApp"
            android:text="Select App"
            android:visibility="gone"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/lbl_noApp"/>
</RelativeLayout>
